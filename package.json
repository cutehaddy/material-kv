{
  "name": "material-kv",
  "displayName": "Material Kivy",
  "description": "A KivyMD Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:kv",
    "onLanguage:spec"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "fonts": [
    {
      "id": "md-icons",
      "src": [
        {
          "path": "./mdicons.tff",
          "format": "woff"
        }
      ],
      "weight": "normal",
      "style": "normal"
    }
  ],
  "contributes": {
    "productIconThemes": [
      {
        "id": "mdIcons",
        "label": "Kivy aterial Design Icons",
        "path": "./producticons/md-product-icon-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/base-templates.json"
      },
      {
        "language": "python",
        "path": "./snippets/kivy.layout.import.json"
      },
      {
        "language": "python",
        "path": "./snippets/md.layout.import.json"
      },
      {
        "language": "python",
        "path": "./snippets/md.templates.json"
      },
      {
        "language": "python",
        "path": "./snippets/md.ux.import.json"
      },
      {
        "language": "kv",
        "path": "./snippets/kivy.ux.json"
      },
      {
        "language": "kv",
        "path": "./snippets/kivy.layout.json"
      },
      {
        "language": "kv",
        "path": "./snippets/kivy.code.json"
      },
      {
        "language": "kv",
        "path": "./snippets/md.layout.json"
      },
      {
        "language": "kv",
        "path": "./snippets/md.component.json"
      },
      {
        "language": "kv",
        "path": "./snippets/md.code.json"
      }
    ],
    "grammars": [
      {
        "language": "kv",
        "scopeName": "source.kv",
        "path": "./syntaxes/kv.tmLanguage.json"
      },
      {
        "language": "spec",
        "scopeName": "source.spec",
        "path": "./syntaxes/spec.tmLanguage.json"
      }, 
      {
      "injectTo": [
        "source.python"
      ],
      "scopeName": "styled",
      "path": "./syntaxes/injection.json",
      "embeddedLanguages": {
        "source.kv": "kv"
        }
      }
    ],
    "languages": [
      {
          "id": "spec",
          "aliases": [
              "spec",
              "spec"
          ],
          "extensions": [
              ".spec"
          ],
          "configuration": "./spec-language-configuration.json"
      },
      {
        "id": "kv",
        "aliases": [
            "kivy",
            "kv"
        ],
        "extensions": [
            ".kv"
        ],
        "configuration": "./kv-language-configuration.json"
    }
  ],
  "commands":[
    {
      "command": "material-kv.decoratecolor",
      "title": "Hello World"
    }
  ],
  "menus":{
    "editor/context": [
      {
        "command": "material-kv.decoratecolor",
        "when": "editorLangId == python || editorLangId == kv",
        "group": "1_modification"
      }
    ]
  }
  }
}
