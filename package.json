{
  "name": "material-kv",
  "displayName": "Material Kivy",
  "description": "This VS Code extension adds support for Kivy and KivyMD including Syntax highlighting, Color Preview, MDIcons preview e.t.c, as well as support for the .spec file type for Buildozer.spec.",
  "version": "0.1.0",
  "icon": "Material.png",
  "publisher": "haddiebakrie",
  "engines": {
    "vscode": "^1.59.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cutehaddy/material-kv"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other",
    "Linters"
  ],
  "keyword": [
    "python",
    "kivy",
    "kvlang",
    "kv",
    "linter",
    "buildozer",
    "spec",
    "kivymd",
    "material-kivy"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:kv",
    "onLanguage:spec"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.12.28",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "fonts": [
    {
      "id": "md-icons",
      "src": [
        {
          "path": "./mdicons.tff",
          "format": "woff"
        }
      ],
      "weight": "normal",
      "style": "normal"
    }
  ],
  "contributes": {
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/base-templates.json"
      },
      {
        "language": "python",
        "path": "./snippets/kivy.layout.import.json"
      },
      {
        "language": "python",
        "path": "./snippets/md.layout.import.json"
      },
      {
        "language": "python",
        "path": "./snippets/md.templates.json"
      },
      {
        "language": "python",
        "path": "./snippets/md.ux.import.json"
      },
      {
        "language": "kv",
        "path": "./snippets/kivy.ux.json"
      },
      {
        "language": "kv",
        "path": "./snippets/kivy.layout.json"
      },
      {
        "language": "kv",
        "path": "./snippets/kivy.code.json"
      },
      {
        "language": "kv",
        "path": "./snippets/md.layout.json"
      },
      {
        "language": "kv",
        "path": "./snippets/md.component.json"
      },
      {
        "language": "kv",
        "path": "./snippets/md.code.json"
      }
    ],
    "grammars": [
      {
        "language": "kv",
        "scopeName": "source.kv",
        "path": "./syntaxes/kv.tmLanguage.json"
      },
      {
        "language": "spec",
        "scopeName": "source.spec",
        "path": "./syntaxes/spec.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.python"
        ],
        "scopeName": "styled",
        "path": "./syntaxes/injection.json",
        "embeddedLanguages": {
          "source.kv": "kv"
        }
      }
    ],
    "languages": [
      {
        "id": "spec",
        "aliases": [
          "spec",
          "spec"
        ],
        "extensions": [
          ".spec"
        ],
        "configuration": "./spec-language-configuration.json"
      },
      {
        "id": "kv",
        "aliases": [
          "kivy",
          "kv"
        ],
        "extensions": [
          ".kv"
        ],
        "configuration": "./kv-language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "material-kv.extract-to-current",
        "title": "Extract to Current File."
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "material-kv.extract-to-current",
          "when": "editorLangId == kv",
          "group": "1_modification"
        }
      ]
    }
  }
}
