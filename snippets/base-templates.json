    "KivyMD App Template 1": {
        "prefix": "md-app-template1",
        "body": [
            "from kivymd.app import MDApp",
            "from kivy.uix.screenmanager import ScreenManager, Screen",
            "",
            "class WindowManager(ScreenManager):",
            "\tpass",
            "",
            "class Home(Screen):",
            "\tpass",
            "",
            "class ${1:MyApp}(MDApp):",
            "",
            "\tdef build(self):",
            "",
            "\t\t# Create a list of all screen, loop through it and add it to the screenmanager",
            "\t\t# and return the screenmanager.",
            "\t\tself.wm = WindowManager()",
            "",
            "\t\tscreens = [",
            "\t\t\tHome(name=\"home\")",
            "\t\t]",
            "",
            "\t\tfor screen in screens:",
            "\t\t\tself.wm.add_widget(screen)",
            "",
            "\t\treturn self.wm",
            "",
            "if __name__==\"__main__\":",
            "\t${1:MyApp}().run()"
        ]
    },
